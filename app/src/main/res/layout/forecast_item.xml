    <TextView
        android:id="@+id/text_forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="#fff"
        android:text="2018-03-07"/>

    <TextView
        android:id="@+id/text_forecast_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
